{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "title": "Jobs.Worker Client Settings (TypeScript)",
  "description": "Default configuration for Jobs.Worker TypeScript Client SDK",
  "type": "object",
  "properties": {
    "baseUrl": {
      "type": "string",
      "description": "Base URL of the Jobs.Worker API",
      "default": "https://localhost:5001"
    },
    "healthCheckUrl": {
      "type": "string",
      "description": "Health check endpoint URL",
      "default": "https://localhost:5001/health"
    },
    "retryCount": {
      "type": "integer",
      "description": "Number of retry attempts for failed requests",
      "default": 3,
      "minimum": 0,
      "maximum": 10
    },
    "timeoutSeconds": {
      "type": "integer",
      "description": "Request timeout in seconds",
      "default": 30,
      "minimum": 5,
      "maximum": 300
    }
  },
  "baseUrl": "https://localhost:5001",
  "healthCheckUrl": "https://localhost:5001/health",
  "retryCount": 3,
  "timeoutSeconds": 30
}
